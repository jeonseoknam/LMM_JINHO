<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E1E2F">

    <!-- 캘린더 뷰 -->
    <CalendarView
        android:id="@+id/calendar_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:background="#FFFFFF" />

    <!-- 하단에 선택된 날짜의 일정 리스트 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/selected_date_recycler_view"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_below="@id/calendar_view"
        android:layout_marginTop="16dp"
        android:padding="8dp" />

    <!-- 하단 버튼 레이아웃 -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/selected_date_recycler_view"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <!-- 채팅방 일정 보기 버튼 -->
        <Button
            android:id="@+id/view_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#3B82F6"
            android:text="채팅방 일정 보기"
            android:textColor="#FFFFFF"
            android:layout_marginEnd="16dp" />

        <!-- 채팅방 일정 등록 버튼 -->
        <Button
            android:id="@+id/register_schedule_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#10B981"
            android:text="채팅방 일정 등록"
            android:textColor="#FFFFFF" />
    </LinearLayout>
</RelativeLayout>
