<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="#292F3F">

    <TextView
        android:id="@+id/invitecode"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="초대코드를 입력하세요."
        android:textSize="15dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:padding="10dp"
        android:textStyle="bold"
        />

    <EditText
        android:id="@+id/editcode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/invitecode"
        android:background="@drawable/rounded_edittext"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:layout_centerHorizontal="true"
        android:padding="8dp"
        android:hint="초대 코드 입력..."
        android:textSize="15dp"
        android:textColorHint="#858585"
        android:textColor="#B3B3B3"
        android:gravity="center"/>
    <TextView
        android:id="@+id/no_button"
        android:layout_below="@+id/editcode"
        android:layout_width="70dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:text="취소"
        android:textSize="13dp"
        android:textStyle="bold"
        android:background="#292F3F"
        android:gravity="center"
        android:layout_marginBottom="5dp" />

    <Button
        android:id="@+id/ok_button"
        android:layout_below="@+id/editcode"
        android:layout_width="72dp"
        android:layout_height="40dp"
        android:textSize="13dp"
        android:layout_toLeftOf="@+id/no_button"
        android:layout_marginRight="5dp"
        android:text="확인"
        android:textStyle="bold"/>

    <RelativeLayout
        android:id="@+id/extralayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editcode"
        android:background="#292F3F"
        android:visibility="gone"
        android:clickable="true">

        <TextView
            android:id="@+id/findchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:padding="10dp"
            android:text="채팅방을 찾았습니다"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/codechat"
            android:layout_below="@+id/findchat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:padding="7dp"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_marginRight="25dp"
            android:textColor="#B3B3B3"
            android:textSize="15dp"
            android:background="@drawable/rounded_edittext"
            />
        <TextView
            android:id="@+id/askchat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@id/codechat"
            android:padding="10dp"
            android:text="채팅방에 참가하겠습니까?"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/codecancelbtn"
            android:layout_width="70dp"
            android:layout_height="40dp"
            android:layout_below="@+id/askchat"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="7dp"
            android:text="취소"
            android:textSize="13dp"
            android:textStyle="bold"
            android:background="#292F3F"
            android:gravity="center" />

        <Button
            android:id="@+id/codeokbtn"
            android:layout_width="72dp"
            android:layout_height="40dp"
            android:textSize="13dp"
            android:layout_marginRight="5dp"
            android:layout_toLeftOf="@+id/codecancelbtn"
            android:layout_alignTop="@+id/codecancelbtn"
            android:text="참가"
            android:textStyle="bold"/>

    </RelativeLayout>
</RelativeLayout>